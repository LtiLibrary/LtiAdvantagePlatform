@page
@using IdentityServer4.Extensions
@using LtiAdvantage.IdentityServer4
@model CreateModel

@{
    ViewData["Title"] = "Tools";
}

<div class="container-fluid">
    <h4>Register Tool</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Tool.DeploymentId"/>
        <div class="row">
            <div class="col-lg-6 mb-3">
                <div class="card">
                    <h5 class="card-header bg-secondary text-light">
                        Tool Settings
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Tool.Name"></label>
                            <input asp-for="Tool.Name" class="form-control" />
                            <span asp-validation-for="Tool.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.LaunchUrl"></label>
                            <input asp-for="Tool.LaunchUrl" class="form-control" />
                            <span asp-validation-for="Tool.LaunchUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.CustomProperties"></label>
                            <tooltip asp-for="Tool.CustomProperties"></tooltip>
                            <textarea asp-for="Tool.CustomProperties" class="form-control text-monospace" rows="3" placeholder="Put each name=value pair on a separate line."></textarea>
                            <span asp-validation-for="Tool.CustomProperties" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.ClientId"></label>
                            <input asp-for="Tool.ClientId" class="form-control" />
                            <span asp-validation-for="Tool.ClientId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.PrivateKey"></label>
                            <tooltip asp-for="Tool.PrivateKey"></tooltip>
                            <textarea asp-for="Tool.PrivateKey" class="form-control text-monospace small" rows="5" placeholder="Enter the private key in PEM format."></textarea>
                            <span asp-validation-for="Tool.PrivateKey" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="card">
                    <h5 class="card-header bg-secondary text-light">
                        Platform Settings
                    </h5>
                    <div class="card-body">
                        <dl>
                            <dt>@Html.DisplayNameFor(m => m.Tool.DeploymentId)</dt>
                            <dd>@Model.Tool.DeploymentId</dd>
                            <dt>Issuer</dt>
                            <dd>@(Request.HttpContext.GetIdentityServerIssuerUri())</dd>
                            <dt>Access Token URL</dt>
                            <dd>@(Request.HttpContext.GetIdentityServerIssuerUri().EnsureTrailingSlash())token</dd>
                            <dt>JWK Set URL</dt>
                            <dd>@(Request.HttpContext.GetIdentityServerIssuerUri().EnsureTrailingSlash()).well-known/openid-configuration/jwks</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-secondary" />
        </div>
    </form>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#@($"{nameof(Model.Tool)}_{nameof(Model.Tool.PrivateKey)}")').bind('paste', function(){
            window.setTimeout(function(){
                var text = '';
                $($('#@($"{nameof(Model.Tool)}_{nameof(Model.Tool.PrivateKey)}")').val().split('\n')).each(function(i,v){
                    v = $.trim(v);
                    if (v.length > 0) text+= v+'\n';
                });
                console.log(text);
                $('#@($"{nameof(Model.Tool)}_{nameof(Model.Tool.PrivateKey)}")').val(text);
            },1);
        });
    </script>
}
