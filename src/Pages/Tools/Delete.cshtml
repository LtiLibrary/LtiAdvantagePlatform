@page
@model DeleteModel

@{
    ViewData["Title"] = "Tools";
}

<div class="container">
    <h4>Delete Tool</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6 mb-3">
            <div class="card">
                <h5 class="card-header">Tool Settings</h5>
                <div class="card-body">
                    <dl>
                        <dt>@Html.DisplayNameFor(model => model.Tool.ToolName)</dt>
                        <dd>@Model.Tool.ToolName</dd>
                        <dt>@Html.DisplayNameFor(model => model.Tool.ToolUrl)</dt>
                        <dd>@Model.Tool.ToolUrl</dd>
                        <dt>@Html.DisplayNameFor(model => model.Tool.ToolClientId)</dt>
                        <dd>@Model.Tool.ToolClientId</dd>
                        <dt>@Html.DisplayNameFor(model => model.Tool.ToolIssuer)</dt>
                        <dd>@Model.Tool.ToolIssuer</dd>
                        <dt>@Html.DisplayNameFor(model => model.Tool.ToolJsonWebKeysUrl)</dt>
                        <dd>@(Model.Tool.ToolJsonWebKeysUrl??"[Not Set]")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-3">
            <div class="card">
                <h5 class="card-header">Platform Settings</h5>
                <div class="card-body">
                    <dl>
                        <dt>@Html.DisplayNameFor(model => model.Tool.DeploymentId)</dt>
                        <dd>@Model.Tool.DeploymentId</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Tool.Id" />
        <input type="submit" value="Delete" class="btn btn-secondary" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>