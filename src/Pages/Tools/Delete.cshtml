@page
@using AdvantagePlatform.Utility
@model DeleteModel

@{
    ViewData["Title"] = "Tools";
}

<div class="container-fluid">
    <h4>Delete Tool Registration</h4>
    <hr />
    <div class="row">
        <div class="col-lg-6 mb-3">
            <div class="card">
                <h5 class="card-header bg-secondary text-light">Tool Settings</h5>
                <div class="card-body">
                    <dl>
                        <dt>@Html.DisplayNameFor(m => m.Tool.Name)</dt>
                        <dd>@Model.Tool.Name.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(m => m.Tool.LoginUrl)</dt>
                        <dd>@Model.Tool.LoginUrl.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(m => m.Tool.LaunchUrl)</dt>
                        <dd>@Model.Tool.LaunchUrl.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(m => m.Tool.DeepLinkingLaunchUrl)</dt>
                        <dd>@Model.Tool.DeepLinkingLaunchUrl.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(m => m.Tool.CustomProperties)</dt>
                        <dd><pre>@Model.Tool.CustomProperties.IfMissingThen()</pre></dd>
                        <dt>@Html.DisplayNameFor(m => m.Tool.ClientId)</dt>
                        <dd>@Model.Tool.ClientId.IfMissingThen()</dd>
                        <dt>@Html.DisplayNameFor(m => m.Tool.DeploymentId)</dt>
                        <dd>@Model.Tool.DeploymentId.IfMissingThen()</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Tool.Id" />
        <input type="submit" value="Delete" class="btn btn-secondary" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>