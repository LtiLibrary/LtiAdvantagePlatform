@page
@model DetailsModel

@{
    ViewData["Title"] = "Tools";
}
<div class="container">
    <h4>Tool Details</h4>
    <hr />
    <div class="row">
        <div class="col-sm-7">
            <dl>
                <dt>@Html.DisplayNameFor(model => model.Tool.ToolName)</dt>
                <dd>@Html.DisplayFor(model => model.Tool.ToolName)</dd>
                <dt>@Html.DisplayNameFor(model => model.Tool.ToolUrl)</dt>
                <dd>@Html.DisplayFor(model => model.Tool.ToolUrl)</dd>
                <dt>@Html.DisplayNameFor(model => model.Tool.ToolClientId)</dt>
                <dd>@Html.DisplayFor(model => model.Tool.ToolClientId)</dd>
                <dt>@Html.DisplayNameFor(model => model.Tool.DeploymentId)</dt>
                <dd>@Html.DisplayFor(model => model.Tool.DeploymentId)</dd>
            </dl>
            <dl>
                <dt>@Html.DisplayNameFor(m => m.PlatformIssuer)</dt>
                <dd>@Html.DisplayFor(m => m.PlatformIssuer)</dd>
            </dl>
            <p>
                The @Html.DisplayNameFor(m => m.PlatformIssuer) supports 
                <a href="@Model.OidcDiscoveryUri" target="_blank">OpenID Connect Discovery</a>.
                If your Tool does not support OpenID Connect Discovery, click on the link to display
                the individual URLs you will need to configure your tool.
            </p>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Tool.Id">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>