@page
@model EditModel

@{
    ViewData["Title"] = "Tools";
}

<div class="container">
    <h4>Edit Tool Registration</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Tool.Id" />
        <div class="row">
            <div class="col-lg-6 mb-3">
                <div class="card">
                    <h5 class="card-header">
                        Tool LTI Settings
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Tool.ToolName"></label>
                            <input asp-for="Tool.ToolName" class="form-control" />
                            <span asp-validation-for="Tool.ToolName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.ToolUrl"></label>
                            <input asp-for="Tool.ToolUrl" class="form-control" />
                            <span asp-validation-for="Tool.ToolUrl" class="text-danger"></span>
                        </div>
                        <div class="alert alert-info">
                            The @Html.DisplayNameFor(m => m.Tool.ToolClientId)
                            and @Html.DisplayNameFor(m => m.Tool.ToolClientSecret)
                            here must match the values in the tool.
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.ToolClientId"></label>
                            <input asp-for="Tool.ToolClientId" class="form-control" />
                            <span asp-validation-for="Tool.ToolClientId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.ToolClientSecret"></label>
                            <input asp-for="Tool.ToolClientSecret" class="form-control" placeholder="Leave blank to keep existing secret" />
                            <span asp-validation-for="Tool.ToolClientSecret" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.ToolIssuer"></label>
                            <tooltip asp-for="Tool.ToolIssuer"></tooltip>
                            <input asp-for="Tool.ToolIssuer" class="form-control" />
                            <span asp-validation-for="Tool.ToolIssuer" class="text-danger"></span>
                        </div>
                        <div class="alert alert-info">
                            If the @Html.DisplayNameFor(m => m.Tool.ToolIssuer) supports OpenID Connect Discover,
                            you can leave the next field blank.
                        </div>
                        <div class="form-group">
                            <label asp-for="Tool.ToolJsonWebKeysUrl"></label>
                            <input asp-for="Tool.ToolJsonWebKeysUrl" class="form-control" />
                            <span asp-validation-for="Tool.ToolJsonWebKeysUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-3">
                <div class="card">
                    <h5 class="card-header">
                        Platform LTI Settings
                    </h5>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Tool.DeploymentId"></label>
                            <tooltip asp-for="Tool.DeploymentId"></tooltip>
                            <input asp-for="Tool.DeploymentId" class="form-control" value="@Model.Tool.DeploymentId" readonly="readonly" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-secondary" />
        </div>
    </form>
    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
