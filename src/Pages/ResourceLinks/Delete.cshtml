@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Resource Link</h4>
        <hr />
        <dl>
            <dt>@Html.DisplayNameFor(m => m.ResourceLink.Title)</dt>
            <dd>@Html.DisplayFor(m => m.ResourceLink.Title)</dd>
            <dt>@Html.DisplayNameFor(m => m.ResourceLink.Description)</dt>
            <dd>@Html.DisplayFor(m => m.ResourceLink.Description)</dd>
            <dt>@Html.DisplayNameFor(m => m.ResourceLink.ToolName)</dt>
            <dd>@Html.DisplayFor(m => m.ResourceLink.ToolName)</dd>
