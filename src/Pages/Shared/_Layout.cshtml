<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="#">Advantage Platform</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @MainNavPages.IndexNavClass(ViewContext)"><a class="nav-link" asp-page="/Index">Home</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item @MainNavPages.ToolsNavClass(ViewContext)"><a class="nav-link" asp-page="/Tools/Index">Tools</a></li>
                        <li class="nav-item @MainNavPages.PlatformLinksNavClass(ViewContext)"><a class="nav-link" asp-page="/PlatformLinks/Index">Platform Links</a></li>
                        <li class="nav-item @MainNavPages.CourseLinksNavClass(ViewContext)"><a class="nav-link" asp-page="/CourseLinks/Index">Course Links</a></li>
                    }
                    <li class="nav-item @MainNavPages.AboutNavClass(ViewContext)"><a class="nav-link" asp-page="/About">About</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    
<main role="main" class="container-fluid">
    @RenderBody()
</main>

<footer class="footer">
    <div class="container-fluid">
        <div>&copy; 2018 - andyfmiller.com</div>
    </div>
</footer>

    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
