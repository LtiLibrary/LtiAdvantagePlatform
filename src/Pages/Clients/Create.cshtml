@page
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h4>Client</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Client.CreatorId" value="@Model.CreatorId"/>
                <div class="form-group">
                    <label asp-for="Client.ClientId"></label>
                    <input asp-for="Client.ClientId" class="form-control" value="@Model.ClientId" readonly="readonly"/>
                    <span asp-validation-for="Client.ClientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.Name"></label>
                    <input asp-for="Client.Name" class="form-control"/>
                    <span asp-validation-for="Client.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.RedirectUrl"></label>
                    <input asp-for="Client.RedirectUrl" class="form-control"/>
                    <span asp-validation-for="Client.RedirectUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-secondary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
