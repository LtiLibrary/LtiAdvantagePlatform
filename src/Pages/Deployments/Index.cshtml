@page
@model IndexModel

@{
    ViewData["Title"] = "Deployments";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Deployments[0].ToolName)</th>
                <th>@Html.DisplayNameFor(m => m.Deployments[0].ToolUrl)</th>
                <th>@Html.DisplayNameFor(m => m.Deployments[0].ToolPlacement)</th>
                <th>@Html.DisplayNameFor(m => m.Deployments[0].ClientId)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Deployments)
            {
            <tr>
                <td>@Html.DisplayFor(m => item.ToolName)</td>
                <td>@Html.DisplayFor(m => item.ToolUrl)</td>
                <td>@Html.DisplayFor(m => item.ToolPlacement)</td>
                <td>@Html.DisplayFor(m => item.ClientId)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>