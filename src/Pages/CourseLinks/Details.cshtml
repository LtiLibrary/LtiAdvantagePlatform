@page
@using AdvantagePlatform.Utility
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <h4>Course Link</h4>
    <hr />
    <dl>
        <dt>@Html.DisplayNameFor(m => m.ResourceLink.Title)</dt>
        <dd>@Model.ResourceLink.Title.IfMissingThen()</dd>
        <dt>@Html.DisplayNameFor(m => m.ResourceLink.Description)</dt>
        <dd>@Model.ResourceLink.Description.IfMissingThen()</dd>
        <dt>@Html.DisplayNameFor(m => m.ResourceLink.ToolName)</dt>
        <dd>@Model.ResourceLink.ToolName.IfMissingThen()</dd>
        <dt>@Html.DisplayNameFor(m => m.ResourceLink.CustomProperties)</dt>
        <dd><pre>@Model.ResourceLink.CustomProperties.IfMissingThen()</pre></dd>
    </dl>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.ResourceLink.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>