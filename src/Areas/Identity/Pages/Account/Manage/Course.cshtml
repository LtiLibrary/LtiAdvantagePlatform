@page
@model CourseModel
@{
    ViewData["Title"] = "Course";
    ViewData["ActivePage"] = "Course";
}

<h4>@ViewData["Title"]</h4>
<p>
    This Course was created for you when you registered. It will be used
    for all interactions with Tools.
</p>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Course.UserId" />
            <div class="form-group">
                <label asp-for="Course.Id"></label>
                <input asp-for="Course.Id" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="Course.SidId"></label>
                <input asp-for="Course.SidId" class="form-control" />
                <span asp-validation-for="Course.SidId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Title"></label>
                <input asp-for="Course.Title" class="form-control" />
                <span asp-validation-for="Course.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-secondary" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}